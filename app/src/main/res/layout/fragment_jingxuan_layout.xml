<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/smartrefresh_Layout">
    <com.example.hasee.myapplication.View.custom.MaterialHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.example.hasee.myapplication.View.custom.MaterialHeader>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.youth.banner.Banner
                android:id="@+id/jingxuan_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y400"
                app:image_scale_type="fit_xy"
                android:background="@color/colorPrimary"></com.youth.banner.Banner>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/jingxuan_sousuo"
                android:layout_width="@dimen/x500"
                android:layout_height="@dimen/y76"
                android:layout_marginTop="@dimen/y70"
                android:layout_centerHorizontal="true"
                android:background="@drawable/sousuo_background">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/search"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x30"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一念天堂"
                    android:textColor="#C1BFC5"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x30"/>
            </LinearLayout>
            

            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/jingxuan_banner"
                android:id="@+id/recycler_view"
                android:layout_marginTop="@dimen/y88"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_marginTop="@dimen/y15"
                android:layout_below="@+id/jingxuan_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/x16">
                <View
                    android:layout_width="@dimen/x5"
                    android:layout_height="@dimen/y39"
                    android:background="#669900"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精彩推荐"
                    android:layout_marginLeft="@dimen/x5"/>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>




</com.scwang.smartrefresh.layout.SmartRefreshLayout>
